<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author.name %></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <form>
      <button class="btn btn-alt" data-post-id="<%= post._id %>">Delete</button>
    </form>
    <a href="/posts/<%= post._id %>/edit">Edit</a>
    <a class="btn" href="/posts/<%= post._id %>">View Post</a>
  </div>
</article>
